@using Entities
@using Business

@inject NavigationManager NavManager

<div>
    <EditForm Model="oWharehouse">
        <div class="form-group">
            <label>ID:</label>
            <InputText @bind-Value="oWharehouse.WarehouseId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre:</label>
            <InputText @bind-Value="oWharehouse.WarehouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Dirección:</label>
            <InputTextArea @bind-Value="oWharehouse.WarehouseAddress" class="form-control" />
        </div>
        <input type="button" value="Agregar Bodega" @onclick="SaveWharehouse" />
    </EditForm>
</div>

@code {
    WharehouseEntity oWharehouse = new WharehouseEntity();

    private void SaveWharehouse()
    {
        B_Wharehouse.CreateWherehouse(oWharehouse);
        NavManager.NavigateTo("wharehouse/list");
    }
}